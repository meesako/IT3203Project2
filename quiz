  <style>
    body { font-family: Arial, sans-serif; background:#f5f5f5; margin:0; padding:0; }
    header { background:#1f3b4d; color:white; padding:1rem; }
    header nav a { color:white; margin-right:1rem; text-decoration:none; }
    nav .active { font-weight:bold; }
    main { max-width:900px; margin:2rem auto; background:white; padding:1.5rem; border-radius:8px; }
    .question-box { margin-bottom:1rem; padding-bottom:1rem; border-bottom:1px solid #ddd; }
    .question-title { font-weight:bold; }
    .buttons button { margin-right:1rem; }
    #results { margin-top:2rem; display:none; background:white; padding:1rem; border-radius:8px; }
    .correct { color:green; font-weight:bold; }
    .incorrect { color:red; font-weight:bold; }
  </style>
